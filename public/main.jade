doctype html
html( ng-app='StlStream', i18n-locale=i18n.getLocale())
	head
		title=__('main.title')
		link(rel='stylesheet', href='css/fontawesome.css')
		link(rel='stylesheet', href='css/style.css')
		script(src='js/jquery.js')
		//- script(src='js/scripts.js')
		script(src='js/tweenmax.js')
	body
		#menubar.flex
			a(href="/")
				img(src="img/logo.png", alt="StlStream logo", id="logo")
			a(href="live",class='pillbtn')=__('button.golive')
		#container.flex
			#gallery
				each video in videos
					a(href='watch?id='+video._id, class='thumb flex')
						img(src=video.thumb, alt=video.title)
						.bottom
							.title #{video.title}
							.length #{video.length}